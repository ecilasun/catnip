def Sprite(word posX, word posY)
{
    word x, y;

    y = 0;
    while (y<23)
    {
        x = 0;
        while (x<16)
        {
            VRAM[x+posX + ((y+posY)<<8)] = sprite[(y<<4)+x];
            x = ++x;
        }
        y = ++y;
    }
    return;
}

def MaskedSprite(word posX, word posY)
{
    word x, y;
    word K;

    y = 0;
    while (y<23)
    {
        x = 0;
        while (x<16)
        {
            K = sprite[(y<<4)+x];
            if (K!=0xFF)
            {
                VRAM[x+posX + ((y+posY)<<8)] = K;
            }
            x = ++x;
        }
        y = ++y;
    }
    return;
}

