    spanY = posY;
    while (spanY<spanY+height)
    {
        spanX = posX;
        while (spanX<spanX+width)
        {
            var address;
            address = spanX + spanY;
            // Plot pixel here at spanX,spanY
            VRAM[address] = 0xFF;
            spanX = spanX+1;
        }
        spanY = spanY+1;
    }
}

