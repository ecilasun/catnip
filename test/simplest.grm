
// GrimR language test file

var cursorX, cursorY;
var VRAM;

function DrawRect
{
    using posX, posY;
    using width, height;
    var spanX, spanY;

    spanY = posY;
    while (spanY<spanY+height)
    {
        spanX = posX;
        while (spanX<spanX+width)
        {
            var address;
            address = spanX + spanY;
            // Plot pixel here at spanX,spanY
            VRAM[address] = 0xFF;
            spanX = spanX+1;
        }
        spanY = spanY+1;
    }
}

function Main
{
    VRAM = 0x80000;
    DrawRect(512, 384, 128, 96);
}
